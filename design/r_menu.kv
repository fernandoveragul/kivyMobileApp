<RMenu@MDNavigationDrawer>:
  MDBoxLayout:
    orientation: 'vertical'
    MDLabel:
      text: "Математические игры для студентов СПО"
      font_style: 'H5'
      adaptive_height: True
      halign:'center'
    MDScrollView:
      do_scroll_x: False
      MDList:
        OneLineIconListItem:
          text: 'Быстрый счёт'
          IconLeftWidget:
            icon: 'counter'
        OneLineIconListItem:
          text: 'Алгебра'
          IconLeftWidget:
            icon: 'square-root'
        OneLineIconListItem:
          text: 'Геометрия'
          IconLeftWidget:
            icon: 'axis-arrow'
        OneLineIconListItem:
          text: 'Аксиомы'
          IconLeftWidget:
            icon: 'format-text-rotation-down-vertical'
        OneLineIconListItem:
          text: 'Алогитмика'
          IconLeftWidget:
            icon: 'language-python'
        OneLineIconListItem:
          text: 'Теория игр'
          IconLeftWidget:
            icon: 'controller'
    MDRectangleFlatIconButton:
      text: 'Настройки'
      icon: 'cog'
      elevation: 0
      size_hint_x: 1
      on_press:
        app.change_screen('settings_screen', 'down')
        app.open_close_menu('close')
