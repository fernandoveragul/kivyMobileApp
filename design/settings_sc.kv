<SettingsScreen>:
  MDBoxLayout:
    orientation: 'vertical'
    padding: 20
    spacing: 40
    MDGridLayout:
      cols: 3
      spacing: 20
      adaptive_height: True
      orientation: 'lr-tb'

      MDIcon:
        icon: 'clock'
        adaptive_size: True
        pos_hint: {'center_y': .5}
      MDLabel:
        text: 'Время на игру'
        font_size: '18sp'
        adaptive_size: True
      MDCheckbox:
        pos_hint: {'center_x': 1}

      MDIcon:
        icon: 'timer'
        adaptive_size: True
        pos_hint: {'center_y': .5}
      MDLabel:
        text: 'Время на задание'
        font_size: '18sp'
        adaptive_size: True
      MDCheckbox:
        pos_hint: {'center_x': 1}

      MDIcon:
        icon: 'lightbulb-variant'
        adaptive_size: True
        pos_hint: {'center_y': .5}
      MDLabel:
        text: 'Подсказки'
        font_size: '18sp'
        adaptive_size: True
      MDCheckbox:
        pos_hint: {'center_x': 1}
    MDLabel:
      size_hint_y: 1
    MDRaisedButton:
      id: menu_opener
      name: 'menu_opener'
      text: 'Выбор сложности'
      size_hint_x: 1
      on_release: app.menu_hard_open()
    MDRectangleFlatIconButton:
      text: 'Вернуться'
      icon: 'backburger'
      size_hint_x: 1
      on_press:
        app.change_screen('start_screen', 'up')

