MDScreen:
  id: root_screen
  MDNavigationLayout:
    MDScreenManager:
      id: screen_manager
      name: 'screen_manager'

      StartScreen:
        id: start_screen
        name: 'start_screen'
        MDRelativeLayout:
          id: stt
          StartScreenLayout:
            id: start_screen_layout
            MDScrollView:
              size_hint_y: .5
              MDLabel:
                id: summary_app
                markup: True
                halign: 'center'
                valign: 'top'
                adaptive_height: True
                text: app.summary_app * 10
            StartScreenBar:
              icon: 'power'
              size_hint_y: .06
              right_action_items: [['menu', lambda x: app.open_close_menu()]]
          MDFloatingActionButton:
            id: stt_btn
            icon: 'power'
            elevation: 2.6
            md_bg_color: '#dcff42'
            pos_hint: {'center_x': .5, 'center_y': .053}
            size: '56dp', '56dp'
            on_release: print(self.elevation)

      SettingsScreen:
        id: settings_screen
        name: 'settings_screen'
        MDBoxLayout:
          orientation: 'vertical'
          padding: 20
          spacing: 40
          MDGridLayout:
            cols: 3
            spacing: 20
            adaptive_height: True
            orientation: 'lr-tb'

            MDIcon:
              icon: 'clock'
              adaptive_size: True
              pos_hint: {'center_y': .5}
            MDLabel:
              text: 'Время на игру'
              font_size: '18sp'
              adaptive_size: True
            MDCheckbox:
              pos_hint: {'center_x': 1}

            MDIcon:
              icon: 'timer'
              adaptive_size: True
              pos_hint: {'center_y': .5}
            MDLabel:
              text: 'Время на задание'
              font_size: '18sp'
              adaptive_size: True
            MDCheckbox:
              pos_hint: {'center_x': 1}

            MDIcon:
              icon: 'lightbulb-variant'
              adaptive_size: True
              pos_hint: {'center_y': .5}
            MDLabel:
              text: 'Подсказки'
              font_size: '18sp'
              adaptive_size: True
            MDCheckbox:
              pos_hint: {'center_x': 1}
          MDLabel:
            size_hint_y: 1
          MDRaisedButton:
            id: menu_opener
            name: 'menu_opener'
            text: 'Выбор сложности'
            size_hint_x: 1
            on_release: app.menu_hard_open()
          MDRectangleFlatIconButton:
            text: 'Вернуться'
            icon: 'backburger'
            size_hint_x: 1
            on_press:
              app.change_screen('start_screen', 'up')

    MDNavigationDrawer:
      id: navigation_drawer
      name: 'navigation_drawer'
      radius: (10, 0, 0, 10)
      anchor: "right"
      size_hint: (.9, 1)
      MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
          text: "Математические игры для студентов СПО"
          font_style: 'H5'
          adaptive_height: True
          halign:'center'
        MDScrollView:
          do_scroll_x: False
          MDList:
            OneLineIconListItem:
              text: 'Быстрый счёт'
              IconLeftWidget:
                icon: 'counter'
            OneLineIconListItem:
              text: 'Алгебра'
              IconLeftWidget:
                icon: 'square-root'
            OneLineIconListItem:
              text: 'Геометрия'
              IconLeftWidget:
                icon: 'axis-arrow'
            OneLineIconListItem:
              text: 'Аксиомы'
              IconLeftWidget:
                icon: 'format-text-rotation-down-vertical'
            OneLineIconListItem:
              text: 'Алогитмика'
              IconLeftWidget:
                icon: 'language-python'
            OneLineIconListItem:
              text: 'Теория игр'
              IconLeftWidget:
                icon: 'controller'
        MDRectangleFlatIconButton:
          text: 'Настройки'
          icon: 'cog'
          elevation: 0
          size_hint_x: 1
          on_press:
            app.change_screen('settings_screen', 'down')
            app.open_close_menu('close')


