<ExampleScreen>:
    MDRelativeLayout:
        MDBoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 20
            MDFillRoundFlatIconButton:
                text: 'Быстрый счёт'
                icon: 'counter'
                icon_size: '32sp'
                font_size: "28sp"
                size_hint_x: .7
                size_hint_y: .2
                pos_hint: {'center_x': .5}
                on_press:
                    app.switch_to_run_example(self.text)
