#:include kv/menu_examples.kv

<Drawer>:
    radius: (10, 0, 0, 10)
    anchor: "right"
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'Математические игры для студентов СПО'
            font_style: 'H5'
            adaptive_height: True
        MenuExamples:
            size_hint_y: 1
        MDRectangleFlatIconButton:
            text: 'Настройки'
            icon: 'cog'
            elevation: 0
            size_hint_x: 1
            on_press:
                app.ch_screen('settings_screen', 'down')
                app.oc_menu('close')
        MDLabel:
            size_hint_y: .05

